<hibernate-configuration>
    <session-factory>

        <property name="hibernate.connection.driver_class">
            com.mysql.cj.jdbc.Driver
        </property>

        <property name="hibernate.connection.url">
            jdbc:mysql://localhost:3306/UMS_HibernateMapping?useSSL=false&amp;serverTimezone=UTC
        </property>

        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.password">asdf</property>

        <property name="hibernate.dialect">
            org.hibernate.dialect.MySQL8Dialect
        </property>

        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.format_sql">true</property>

        <property name="hibernate.hbm2ddl.auto">update</property>

        <property name="hibernate.current_session_context_class">
            thread
        </property>
        <mapping class="org.example.entity.Department"/>
        <mapping class="org.example.entity.Student"/>
        <mapping class="org.example.entity.IDCard"/>
        <mapping class="org.example.entity.Course"/>

    </session-factory>
</hibernate-configuration>
